<div class='container px-5 px-sm-0'>
  <div class='row'>
    <%= render'users/userinfo', user: @user , book: @book_new %>
    <div class='col-md-8 offset-md-1'>
      <h2>Groups</h2>

      <%= link_to "グループを作成する" , new_group_path %> / <%= link_to "グループ一覧" , groups_path %>

      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>グループ名</th>
            <th>紹介文</th>
            <th>メンバー数</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @groups.each do |group| %>
            <tr>
              <td>
                <%= image_tag group.get_image(100,100) %>
              </td>
              <td>
                <%= link_to group.name, group_path(group.id) %>
              </td>
              <td>
                <%= group.introduction %>
              </td>
              <td>
                <%= group.group_users.count + 1%>
              </td>
              <td>
                <% if group.owner_id == current_user.id %>
                  <%= link_to "Edit" ,edit_group_path(group.id) ,class: "btn btn-success" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
